<div class="list-contents">
  <div class="list-wrapper">
    <h3>Exterior Color</h3>
    <ul>
      {{#each exteriorColors as |color|}}
        {{common-ui/ui-list
          check=true
          type="radio"
          info=true
          labelId=(concat "color-" color.id)
          vehicles=color.defaultImgSrc
          label=color.meaning
          checked=(eq selectedExteriorColorId color.id)
          onClick=(action toggleColor color.id "exterior")
        }}
      {{/each}}
